{# Dywee\NotificationBundle\Resources\View\Alert\table.html.twig #}

{%  extends "DyweeNotificationBundle::admin.html.twig" %}

{% block title %}
    Liste des alertes {{ parent() }}
{% endblock %}

{% block body %}

    <div class="title-heading">
        <h1 class="text-center">Liste des alertes</h1>
    </div>

    {% if alertList|length > 0 %}
        <table class="table table-striped table-hover table-condensed">
            <thead>
            <tr>
                <th>#</th>
                <th>Alerte</th>
            </tr>
            </thead>
            <tbody>
            {%  for alert in alertList %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{% include 'Dywee' ~ alert.bundle|capitalize ~ 'Bundle:Alert:' ~ alert.type ~ '.html.twig' %}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Il n'y a aucune alerte pour votre site</p>
    {% endif %}

{% endblock %}